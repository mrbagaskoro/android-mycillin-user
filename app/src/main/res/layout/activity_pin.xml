<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bgColor" >

    <ImageView
        android:id="@+id/pinActivity_iv_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/mycillin_logo"/>

    <TextView
        android:id="@+id/pinActivity_tv_titleTxt"
        android:layout_below="@+id/pinActivity_iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/primaryText"
        android:text="@string/pinActivity_title"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/pinActivity_tv_messageTxt"
        android:layout_below="@+id/pinActivity_tv_titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/secondaryText"
        android:text="@string/pinActivity_message"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/pinActivity_iv_circle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/pinActivity_iv_circle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/pinActivity_iv_circle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty" />

        <ImageView
            android:id="@+id/pinActivity_iv_circle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:src="@drawable/circle_empty" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/pinActivity_tl_tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="50dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <TableRow
            android:id="@+id/pinActivity_tr_tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/pinActivity_bt_button1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/pinActivity_bt_button2"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/pinActivity_bt_button3"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

        </TableRow>

        <TableRow
            android:id="@+id/pinActivity_tr_tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/pinActivity_bt_button4"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/pinActivity_bt_button5"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/pinActivity_bt_button6"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="6"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

        </TableRow>

        <TableRow
            android:id="@+id/pinActivity_tr_tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/pinActivity_bt_button7"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/pinActivity_bt_button8"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

            <Button
                android:id="@+id/pinActivity_bt_button9"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="9"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

        </TableRow>

        <TableRow
            android:id="@+id/pinActivity_tr_tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Space
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="@android:color/transparent" />

            <Button
                android:id="@+id/pinActivity_bt_button0"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="25sp"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:background="?attr/selectableItemBackground" />

            <ImageButton
                android:id="@+id/pinActivity_ib_buttonBackSpace"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dip"
                android:layout_margin="3dip"
                android:src="@drawable/ic_backspace_black"
                android:background="?attr/selectableItemBackground" />

        </TableRow>

    </TableLayout>

</RelativeLayout>