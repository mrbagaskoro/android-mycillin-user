<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mycillin.user.activity.MedicalPersonnelDetailActivity">

    <RelativeLayout
        android:id="@+id/medicalPersonnelDetailActivity_ll_headerContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/white" >

        <ImageView
            android:id="@+id/medicalPersonnelDetailActivity_iv_doctorPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/intro_one"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50000000"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/medicalPersonnelDetailActivity_tv_doctorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/rowMedicalRecord_doctorNameDesc"/>

            <TextView
                android:id="@+id/medicalPersonnelDetailActivity_tv_doctorType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:text="@string/medicalPersonnelDetail_doctorType"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/medicalPersonelDetailActivity_ll_infoContainer"
        android:layout_below="@+id/medicalPersonnelDetailActivity_ll_headerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/medicalPersonnelAdapter_doctorPermittTitle" />

            <TextView
                android:id="@+id/medicalPersonnelDetailActivity_tv_doctorPermitt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="@string/medicalPersonnelDetail_doctorPermitt" />

        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/bgColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <RatingBar
                android:id="@+id/medicalPersonelDetailActivity_rb_doctorRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_above="@+id/homeFragment_sv_bodyContainer"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/bgColor" />

    <ScrollView
        android:id="@+id/homeFragment_sv_bodyContainer"
        android:layout_below="@+id/medicalPersonelDetailActivity_ll_infoContainer"
        android:layout_above="@+id/homeFragment_rl_footerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" >

        <LinearLayout
            android:id="@+id/medicalPersonnelDetailActivity_ll_bodyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/medicalPersonnelDetailActivity_ll_availabilityContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="5" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/medicalPersonnelDetail_availabilityInfo"/>

                    <TextView
                        android:id="@+id/medicalPersonelDetailActivity_tv_doctorAvailability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@string/medicalPersonnelDetail_availability"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/bgColor" />

            <LinearLayout
                android:id="@+id/medicalPersonnelDetailActivity_ll_experienceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="5" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/medicalPersonelDetailActivity_tv_doctorExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@string/medicalPersonnelDetail_experienceInfo"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/bgColor" />

            <LinearLayout
                android:id="@+id/medicalPersonnelDetailActivity_ll_hospitalContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="5" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/medicalPersonelDetailActivity_tv_doctorHospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@string/medicalPersonnelDetail_hospitalInfo"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/bgColor" />

            <LinearLayout
                android:id="@+id/medicalPersonnelDetailActivity_ll_educationContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="5" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/medicalPersonelDetailActivity_tv_doctorEducation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="@string/medicalPersonnelDetail_educationInfo"/>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="@color/bgColor" />

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/homeFragment_rl_footerContainer"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/medicalPersonelDetailActivity_ll_estimatedFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50000000"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/primaryText"
                    android:text="@string/medicalPersonnelDetail_feeInfo"/>

                <TextView
                    android:id="@+id/medicalPersonelDetailActivity_tv_doctorFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="25sp"
                    android:textColor="@color/primaryText"
                    android:textStyle="bold"
                    android:text="@string/medicalPersonnelDetail_feeAmount"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textStyle="italic"
                    android:text="@string/medicalPersonnelDetail_feeTwoInfo"/>

            </LinearLayout>

            <View
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:background="@color/bgColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/primaryText"
                    android:text="@string/medicalPersonnelDetail_radioGroupTitle"/>

                <RadioGroup
                    android:id="@+id/medicalPersonelDetailActivity_rg_radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/medicalPersonelDetailActivity_rb_radioButtonCash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicalPersonnelDetail_cash"/>

                    <RadioButton
                        android:id="@+id/medicalPersonelDetailActivity_rb_radioButtonEWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicalPersonnelDetail_hospitalEWallet"/>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/medicalPersonelDetailActivity_bt_requestBtn"
            android:layout_below="@+id/medicalPersonelDetailActivity_ll_estimatedFee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_no_rad_primary"
            android:text="@string/medicalPersonnelDetailActivity_request"/>

    </RelativeLayout>

</RelativeLayout>