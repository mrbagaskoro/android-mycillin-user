<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mycillin.user.activity.ServicesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/servicesActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white" />

    <RelativeLayout
        android:id="@+id/servicesActivity_rl_servicesActivityMainContainer"
        android:layout_below="@+id/servicesActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true" >

        <TextView
            android:id="@+id/servicesActivity_tv_headerTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="@string/servicesActivity_whoNeedsHelpTxt" />

        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/servicesActivity_tv_headerTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:paddingRight="50dp"
            android:paddingEnd="50dp"
            android:layout_marginBottom="@dimen/spacing_small" >

            <EditText
                android:id="@+id/servicesActivity_et_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:focusable="false"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/servicesActivity_rl_servicesActivityMainContainer"
        android:layout_above="@+id/servicesActivity_rl_servicesActivityFooterContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:orientation="vertical" >


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/servicesActivity_rl_servicesActivityFooterContainer"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fbBlueLight">

        <LinearLayout
            android:id="@+id/servicesActivity_ll_servicesActivityBtnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/servicesActivity_ll_walletInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fbBlue"
                        android:text="@string/homeFragment_walletBalance" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fbBlue"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@string/homeFragment_walletAmount" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fbBlue"
                        android:text="@string/homeFragment_walletDesc" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingStart="10dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/servicesActivity_bt_toPupWalletBtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:textColor="@color/accent"
                        android:text="@string/homeFragment_topUp"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>