<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    tools:context="com.mycillin.user.fragment.home.HomeFragment" >

    <LinearLayout
        android:id="@+id/homeFragment_ll_homeFragmentLogoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeFragment_iv_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@null"
            android:src="@drawable/mycillin_logo" />

    </LinearLayout>

    <Space
        android:id="@+id/homeFragment_sp_spaceOne"
        android:layout_below="@+id/homeFragment_ll_homeFragmentLogoContainer"
        android:layout_width="fill_parent"
        android:layout_height="100dp"/>


    <TextView
        android:id="@+id/homeFragment_tv_homeFragmentNoteOne"
        android:layout_below="@+id/homeFragment_sp_spaceOne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="@string/homeFragment_NoteOne" />

    <TextView
        android:id="@+id/homeFragment_tv_homeFragmentNoteTwo"
        android:layout_below="@+id/homeFragment_tv_homeFragmentNoteOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingStart="50dp"
        android:paddingRight="50dp"
        android:paddingEnd="50dp"
        android:textSize="15sp"
        android:text="@string/homeFragment_NoteTwo" />

    <RelativeLayout
        android:id="@+id/homeFragment_rl_homeFragmentMainContainer"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/homeFragment_ll_homeFragmentBodyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="bottom"
            android:background="@color/white"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:id="@+id/homeFragment_ll_homeFragmentBtnOneContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/homeFragment_bt_startServicesBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_no_rad_fb_light"
                    android:text="@string/homeFragment_startService" />

                <ImageButton
                    android:id="@+id/homeFragment_bt_shareBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/colorAccentLight"
                    app:srcCompat="@drawable/ic_share"
                    android:text="@string/homeFragment_share"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/homeFragment_ll_homeFragmentBtnTwoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/homeFragment_ll_walletInfoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fbBlue"
                            android:text="@string/homeFragment_walletBalance" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fbBlue"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="@string/homeFragment_walletAmount" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/fbBlue"
                            android:text="@string/homeFragment_walletDesc" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingStart="10dp"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/homeFragment_bt_toPupWalletBtn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorAccent"
                            android:text="@string/homeFragment_topUp"/>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
