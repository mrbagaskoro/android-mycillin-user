<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">

    <android.support.v7.widget.CardView
        android:id="@+id/rowInsuranceList_cv_cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rowInsuranceList_iv_insuranceImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitXY" />

            <View
                android:id="@+id/rowInsuranceList_v_divider_one"
                android:layout_below="@+id/rowInsuranceList_iv_insuranceImage"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bgColor" />

            <TextView
                android:id="@+id/rowInsuranceList_tv_insurancePolicyNo"
                android:layout_below="@id/rowInsuranceList_v_divider_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/primaryText"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowInsuranceList_tv_insurancePolicyProvider"
                android:layout_below="@id/rowInsuranceList_tv_insurancePolicyNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/primaryText"
                android:textSize="17sp" />

            <View
                android:id="@+id/rowInsuranceList_v_divider_two"
                android:layout_below="@+id/rowInsuranceList_tv_insurancePolicyProvider"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/bgColor" />

            <TextView
                android:id="@+id/rowInsuranceList_tv_insurancePolicyHolderTitle"
                android:layout_below="@id/rowInsuranceList_v_divider_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="@string/rowInsuranceList_insuranceHolderTitle"
                android:textColor="@color/secondaryText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rowInsuranceList_tv_insurancePolicyHolder"
                android:layout_below="@id/rowInsuranceList_tv_insurancePolicyHolderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/primaryText"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowInsuranceList_tv_insuredNameTitle"
                android:layout_below="@id/rowInsuranceList_tv_insurancePolicyHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:text="@string/rowInsuranceList_insuredNameTitle"
                android:textColor="@color/secondaryText"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rowInsuranceList_tv_insuredName"
                android:layout_below="@id/rowInsuranceList_tv_insuredNameTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/primaryText"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_below="@id/rowInsuranceList_iv_insuranceImage"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rowInsuranceList_iv_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_delete_black" />

                <ImageView
                    android:id="@+id/rowInsuranceList_iv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_edit_black" />

            </LinearLayout>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>