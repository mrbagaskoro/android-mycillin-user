<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mycillin.user.activity.medicalrecord.MedicalRecordDetailActivity">

    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/medicalRecordDetailActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/medicalRecordDetailActivity_ll_headerContainer"
        android:layout_below="@id/medicalRecordDetailActivity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/medicalRecordDetailActivity_tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/primaryText"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="@string/medicalRecordDetailActivity_dateTitle" />

        <TextView
            android:id="@+id/medicalRecordDetailActivity_tv_doctor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/primaryText"
            android:text="@string/medicalRecordDetailActivity_doctorTitle" />

    </LinearLayout>

    <FrameLayout
        android:layout_below="@+id/medicalRecordDetailActivity_ll_headerContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.desnyki.library.infinitymenu.RootScrollView
            android:id="@+id/medicalRecordDetailActivity_rootScrollView"
            android:fadeScrollbars="false"
            android:fadingEdgeLength="0dp"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/medicalRecordDetailActivity_rl_diagnose"
                    android:background="@drawable/accordion_bar"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/medicalRecordDetailActivity_iv_diagnose"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/medicalRecordDiagnose_info"
                        android:textColor="@color/white"
                        android:layout_toEndOf="@+id/medicalRecordDetailActivity_iv_diagnose"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp" />

                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/medicalRecordDetailActivity_rl_result"
                    android:background="@drawable/accordion_bar"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/medicalRecordDetailActivity_iv_result"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicalDiagnoseResult_info"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/medicalRecordDetailActivity_iv_result"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp" />

                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"  />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/medicalRecordDetailActivity_rl_action"
                    android:background="@drawable/accordion_bar"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/medicalRecordDetailActivity_iv_action"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicalRecordAction_info"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/medicalRecordDetailActivity_iv_action"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"/>

                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/medicalRecordDetailActivity_rl_prescription"
                    android:background="@drawable/accordion_bar"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/medicalRecordDetailActivity_iv_prescription"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_launcher"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/activity_horizontal_margin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicalRecordPrescription_info"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/medicalRecordDetailActivity_iv_prescription"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp" />

                    <ImageView
                        android:scaleType="fitCenter"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentEnd="true"
                        android:tag="arrow"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin" />

                </RelativeLayout>

            </LinearLayout>

        </com.desnyki.library.infinitymenu.RootScrollView>

        <com.desnyki.library.infinitymenu.ChildScrollView
            android:id="@+id/medicalRecordDetailActivity_childScroolView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:animateLayoutChanges="true" >

        </com.desnyki.library.infinitymenu.ChildScrollView>

    </FrameLayout>

</RelativeLayout>